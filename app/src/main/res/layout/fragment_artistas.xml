<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatosArtistas"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.7dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15.7dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="UNETE"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="40dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Tipo de servicio"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <Spinner
                android:id="@+id/idTipoServicio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                tools:ignore="SpeakableTextPresentCheck" />


            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Nombre Grupo"
                app:counterEnabled="true"
                app:counterMaxLength="40"
                app:helperText="Required"
                app:startIconDrawable="@drawable/idguitarra">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idNombreGrupo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Describe tu agrupacion"
                app:counterEnabled="true"
                app:counterMaxLength="200"
                app:helperText="Required"
                app:startIconDrawable="@drawable/idcalle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Logo Tipo"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/idImageLogo"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="36dp"
                android:src="@drawable/anadir" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/idLogo"
                    android:layout_width="280dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:drawableLeft="@drawable/idlogo"
                    android:enabled="false"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button

                    android:id="@+id/idCargarImagen"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/orange"
                    android:text="Logo"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    app:cornerRadius="20dp" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Direccion"
                app:counterEnabled="true"
                app:counterMaxLength="40"
                app:helperText="Required"
                app:startIconDrawable="@drawable/idcalle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Municipio"
                app:counterEnabled="true"
                app:counterMaxLength="40"
                app:helperText="Required"
                app:startIconDrawable="@drawable/idgps">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idMunicipio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Genero Musical"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/idGeneroMusical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"

                android:layout_marginTop="10dp" />

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefono"
                app:counterEnabled="true"
                app:counterMaxLength="40"
                app:helperText="Required"
                app:startIconDrawable="@drawable/idtelefono">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idTelefonoGrupo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                app:counterEnabled="true"
                app:counterMaxLength="50"
                app:helperText="Required"
                app:startIconDrawable="@drawable/idcorreo">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idCorreoGrupo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="ContraseÃ±a"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:endIconMode="password_toggle"
                app:startIconDrawable="@drawable/idcontrase">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idPasswordGrupo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/idPerfilArtista"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/orange"
                android:text="Registrar"
                android:textColor="@color/black"
                app:cornerRadius="15dp" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>