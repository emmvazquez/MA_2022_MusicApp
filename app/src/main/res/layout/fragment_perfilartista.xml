<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilArtista"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text= "Perfil General">



        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/idPaquetes"
            android:layout_gravity="center"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/orange"
            android:text="Registrar Paquetes"
            android:textColor="@color/black"
            app:cornerRadius="15dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="60dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Fechas agendada" />

        <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="290dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"></CalendarView>

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="Datos Generales"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="DescripciÃ³n"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <Spinner
            android:id="@+id/Contenido"
            android:text="Contenido Multimedia"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />

        <Button
            android:text="Cerrar"
            android:layout_marginTop="20dp"
            android:id="@+id/idCerrar2"
            android:layout_width="280dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:backgroundTint="@color/orange"
            android:textColor="@color/black"
            app:cornerRadius="15dp"/>
    </LinearLayout>

    </ScrollView>

</FrameLayout>
